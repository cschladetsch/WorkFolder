#!/bin/bash

# source this from your .bashrc file

alias gs='git status --short --branch'
alias gc='git commit -m'
alias gshow='git show --name-only --oneline'
alias gl='git lg'
alias gd='git diff'
alias gp='git push'
alias gu='git pull'
alias gch='git checkout'
alias gcs='status'
alias h='history'
alias g='git'
alias gr='git remote -v'
alias glog='git reflog'

export PS1='\e[0m \[\033]0;$TITLEPREFIX:$PWD\[\007\]\n\e[0m\]\! \[\033[33m\]\w\[\033[36m\]`__git_ps1`\[\033[0m\]\n\[\e[2m\]Î»\[\e[0m\] \e[1m'
export PS2='-->'

gacp()
{
    git add *
    git commit -m "$*"
    git push
}

export gacp

echo "Sourced bashrc-shared"
