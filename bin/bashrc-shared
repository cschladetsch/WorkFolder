#!/bin/bash

# source this from your .bashrc file

alias h='history'
alias g='git'
alias gs='g status --short --branch'
alias gc='g commit -m'
alias gshow='g show --name-only --oneline'
alias gl='g lg'
alias gd='g diff'
alias gp='g push'
alias gu='g pull'
alias gch='g checkout'
alias gcs='status'
alias gr='g remote -v'
alias glog='g reflog'
alias gpu='gp upstream'
alias gppu='gp && gpu'

export PS1='\e[0m \[\033]0;$TITLEPREFIX:$PWD\[\007\]\n\e[0m\]\! \[\033[33m\]\w\[\033[36m\]`__git_ps1`\[\033[0m\]\n\[\e[2m\]Î»\[\e[0m\] \e[1m'
export PS2='-->'

gacp()
{
    git add *
    git commit -m "$*"
    git push
}

export gacp

echo "Sourced bashrc-shared"
