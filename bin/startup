#!/bin/bash
# Source this from your .bashrc file.

export WORK_BIN=/w/bin
export PATH=$PATH:$WORK_BIN

source $WORK_BIN/functions
source $WORK_BIN/aliases

# Create a gobal gitignore from the default if there isn't one.
if [ ! -f ~/.gitignore ]; then
	ln -s /w/doc/default/gitignore-global ~/.gitignore
fi

CLEAR='\[\e[0m\]'
YELLOW='\[\e[33m\]'
CYAN='\[\e[36m\]'
DIM='\[\e[2m\]'
LAMBDA='λ'
BOLD='\[\e[1m\]'
TITLE="\[\e]0;\w\a"
HIST='\!'
DIR='\w'
MAGENTA='\[\e[35m\]'
STATUS='$?'

export GIT_PS1_SHOWDIRTYSTATE=true
#export GIT_PS1_SHOWUNTRACKEDFILES=true
export GIT_PS1_SHOWUPSTREAM="auto name"
export GIT_PS1_SHOWCOLORHINTS=true
BRANCH='`__git_ps1`'

export PS1="$TITLE$CLEAR\n$HIST $DIM$STATUS$CLEAR $YELLOW$DIR$CYAN$BRANCH$CLEAR\n$DIM$LAMBDA$CLEAR $BOLD"
export PS2='»»» '

export PATH=$PATH:'/c/Program Files (x86)/Microsoft Visual Studio/2017/Community/MSBuild/15.0/Bin/Roslyn'

echo_verbose 1 "Started"
echo

show-git-tip()
{
    if [ ! -z $1 ]; then
        echo -e "\e[92m"
        git-tip $1 | tail -n +1
        echo -e "\e[0m"
        return
    fi
    IFS="=>"
    tip=`git-tip $* | tail -n +3`
    title=`echo $tip | head -1`
    text=`echo $tip | tail -n +2`
    echo -e "\e[32m$title"
    echo -e "\e[92m$text"
    echo "$text" > /w/tmp/last-gt-cmd
    echo "$title" > /w/tmp/last-gt-title
    unset IFS
}

show-git-tip

run-git-help()
{
    cmd=`cat /w/tmp/last-gt-cmd`
    echo -e "\e[2mRunning \e[0;35m$cmd\e[0m"
    eval "$cmd"
}

alias gte=run-git-help


